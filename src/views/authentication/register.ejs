<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {view: "Registrate" , gliderCSSDisabled:true}) %>

    <body>
        <%- include('../partials/header') %>

            <main class="register-main">
                <div class="contenedor-registro">
                    <form class="form-principal" action="/autenticacion/registro" method="post"
                        enctype="multipart/form-data">
                        <h1>Registrarse</h1>
                        <div class="imgProductForm">
                            <label for="productImg" class="form-label">
                                <img src="/images/avatar/default/perfilUser.png" alt="default product img" />
                            </label>
                            <input class="registerAvatarInput" type="file" class="form-control" name="avatar"
                                id="productImg" />
                            <p class="text-danger-error registerAvatarError">
                                <%= locals.errors?.avatar?.msg %>
                            </p>
                        </div>

                        <div class="contenedor-form">
                            <div class="nombre">
                            
                                        <input type="text" class="inputs" name="name" placeholder="Nombre completo"
                                        id="nombre" value="<%= locals.old?.name %>" />
                                        <p class="errName">
                                            <%= locals.errors?.name?.msg %>
                                        </p>
                            </div>

                            <div class="email">
                                <input class="inputs is-valid" type="email" name="email" placeholder="Ingrese su email"
                                                id="email" value="<%= locals.old?.email %>" />
                                    <p class="errEmail">
                                    <%= locals.errors?.email?.msg %>
                                </p>            
                            </div>

                            <div class="contrasenia">
                            <input class="inputs" type="password" name="password" id="contrasenia"
                                                placeholder="Contraseña" value="<%= locals.old?.password %>" />
                                    <p class="errPassword">
                                            <%= locals.errors?.password?.msg %>
                                        </p>            
                            </div>
                        </div>

                        <div class="contenedor-button">
                            <div class="boton">
                                <button class="submit" type="submit">Crear cuenta</button>
                            </div>
                            <div class="inicio">
                                <p>¿Ya tienes cuenta?</p>
                                <a class="inicio-session" href="/autenticacion/iniciar">INICIAR SESIÓN</a>
                            </div>
                        </div>
                    </form>
                </div>
            </main>
            
            <%- include('../partials/footer') %> 

            <%- include('../partials/scripts', { disabledGliderJS:true }) %>
            <script src="/js/validations/register.js"></script>
    </body>

</html>