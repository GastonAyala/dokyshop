<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head',  {view: "Iniciar sesión", gliderCSSDisabled:true}) %>
<body class="body-login">
    <%- include('../partials/header') %>

    <main class="login-main">
        <div class="div-contenedor">
        <form class="form-principal" action="/autenticacion/iniciar" method="post">
            <h1 class="titulo-login">Iniciar Sesión </h1>
            <div class="contenedor-form" >
                <div class="usuario">
                    <label class="usuario" for="usuario"></label>
                    <input class="usuario" type="email" name="email" placeholder="Email" id="email" value="<%= locals.old?.email %>">
                    <p class="msg-error errorEmail"><%= locals.errorsLog?.email?.msg %></p>
                </div>

                <div class="contrasenia">
                    <label for="password"></label>
                    <input class="contrasenia" type="password" name="password" id="password" placeholder="Contraseña">
                    <p class="msg-error errorPassword"><%= locals.errorsLog?.password?.msg %></p>
                </div>   
            </div>

            <div class="recordar">
                <div class="div">
                     <input class="checkbox" type="checkbox" name="remember" id="recuerdamelo" value="recuerdamelo">
                     <label class="recordar" for="recuerdamelo">Recordarme</label>
                </div>
                <a class="recordarContra" href="">¿Olvidaste la contraseña?</a>
            </div>

            <div class="contenedor-button">
                <div class="boton">
                    <button class="submit" type="submit">Entrar</button>
                    <p class="text-danger col-12 text-center err-form-general"></p>
                </div>

                <div class="inicio">   
                    <p>¿No tienes cuenta?</p>
                    <a class="crear-cuenta" href="/autenticacion/registro">CREAR CUENTA</a>
                </div>
            </div>
        </form>
    </div>
    </main>
    <%- include('../partials/footer') %>

    <%- include('../partials/scripts', { disabledGliderJS:true }) %>
    <script src="/js/validations/login.js"></script>
</body>
</html>